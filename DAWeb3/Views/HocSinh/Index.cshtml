@model IEnumerable<DAWeb3.Models.HocSinh>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                Họ và tên
            </th>
            <th>
                Email
            </th>
            <th>
                Điện thoại
            </th>
            <th>
                Địa chỉ
            </th>
           
            <th>
                Khối
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.MaKhoiNavigation.TenKhoi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaThanhVien">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaThanhVien">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaThanhVien">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
