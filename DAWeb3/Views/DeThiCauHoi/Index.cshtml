@model IEnumerable<DAWeb3.Models.DeThisChiTiet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Đề Thi Câu Hỏi</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Câu hỏi
            </th>
            <th>
                Đề thi
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCauHoiNavigation.CauHoi1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDeThiNavigation.TenDeThi)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <button class="btn btn-xs btn-warning" name="update">
                            <i class="fas fa-edit" aria-hidden="true"></i> Edit
                        </button>
                    </a>

                    <a asp-action="Details" asp-route-id="@item.Id">
                        <button class="btn btn-xs btn-info" name="view">
                            <i class="fas fa-eye" aria-hidden="true"></i> Details
                        </button>
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <button class="btn btn-xs btn-danger" name="delete">
                            <i class="fas fa-trash" aria-hidden="true"></i> Delete
                        </button>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
