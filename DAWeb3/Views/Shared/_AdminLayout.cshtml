
@{
    ViewData["Title"] = "_AdminLayout";
}
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
    <!-- Bao gồm thư viện CSS của Bootstrap v5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bao gồm thư viện JavaScript cần thiết của Bootstrap v5 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

</head>
<body>
    
   @*  @{
       Html.RenderPartial("_Navbar", "Admin");
    } *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/Admin/index">Home</a>
                    </li>
                    
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Quản lý
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Quản Lý Admin</a></li>
                            <li><a class="dropdown-item" href="/GiaoVien/Index">Quản Lý Giáo Viên</a></li>
                            <li><a class="dropdown-item" href="/HocSinh/index">Quản Lý Học Sinh</a></li>
                            <li><a class="dropdown-item" href="/DeThi/index">Quản Lý Đề Thi</a></li>
                            <li><a class="dropdown-item" href="/CauHoi/index">Quản Lý Câu Hỏi</a></li>
                            <li><a class="dropdown-item" href="/DeThiCauHoi/index">Thêm câu hỏi vào đề thi</a></li>
                            <li><a class="dropdown-item" href="/Ketqua/index">Xem Kết Quả</a></li>
                            <li><a class="dropdown-item" href="/Khoi/index">Quản Lý Lớp</a></li>
                            <li><hr class="dropdown-divider"></li>
                            
                        </ul>
                    </li>
                </ul>
                
                <a id="logoutButton" class="btn btn-danger" href="#">Đăng xuất</a>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top: 80px;">
        <div class="card">
            <div class="card-header bg-primary text-white">Quan Tri He Thong</div>
            <div class="card-body">@RenderBody()</div>
            <div class="card-footer"><p>© 2016 Company, Inc.</p></div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    // Đợi tài liệu được tải hoàn toàn trước khi thêm xử lý sự kiện
    $(document).ready(function () {
        // Xử lý sự kiện khi nhấn nút đăng xuất
        $("#logoutButton").click(function (e) {
            e.preventDefault(); // Ngăn chặn hành vi mặc định của nút đăng xuất

            // Gửi yêu cầu đăng xuất đến server
            $.get("/Default/Logout", function (data) {
                // Chuyển hướng người dùng đến trang đăng nhập sau khi đăng xuất thành công
                window.location.href = "/Default/Login";
            });
        });
    });
</script>

